<body>

  <!-- ======= Mobile nav toggle button ======= -->
  <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

  <!-- ======= Header ======= -->
  <header id="header">
    <div class="d-flex flex-column">

      <div class="profile">
        <img src="<%=profile_pic%>" alt="" class="img-fluid rounded-circle">
        <h1 class="text-light"><a href="index.html" ><%=name%></a></h1>
      </div>

      <nav id="navbar" class="nav-menu navbar">
        <ul>
          <li><a href="feed.html" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Feed</span></a></li>
          <li><a href="fav_places.html" class="nav-link scrollto"><i class="bx bx-user"></i> <span>My Favourite Places</span></a></li>
          <li><a href="travels.html" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>My Travels</span></a></li>
        </ul>
      </nav><!-- .nav-menu -->

      <button type="button" class="btn btn-light" style="margin-top:20vh" onclick="add_journey()">New Journey!</button>
    </div>
  </header><!-- End Header -->

  <main id="main">

   
    <section id="portfolio" class="portfolio section-bg">
      <div class="container">

        <div class="section-title">
          <h2>My Travel History</h2>
          <p>Enjoy Reminescening with your Adventures!</p>
        </div>
    
        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">
          <% for (let i=0;i<num_cards;i++) {%>
          <div class="col-lg-4 col-md-6 portfolio-item filter-app">
            <div class="portfolio-wrap">
              <div>
                <div>
                  <h3><%=title[i]%></h3>
                </div>
                <div>
                  <img src=<%=port_image%> class="img-fluid" alt="">
                </div>
                
              </div>
              <div class="portfolio-links">
								<a href=<%=`${port_link}/${i}`%> title="View Travel"><i class="bi bi-eye-fill"></i></i></a>
                <a href='javascript:;' onclick='publish(<%=i%>);' id="card<%=i%>" title="Publish Travel">
                  <% if(port_publish[i]===false) { %>
                    <i class="bi bi-box-arrow-up-right"></i>
                  <% }else{ %>
                    <i class="bi bi-x-square"></i>
                  <% } %>
                </a>
              </div>
            </div>
          </div>
          <% } %>
        </div> 
        
          
      </div>
    </section><!-- End Portfolio Section -->
    <div class="modal fade" id="addJourney" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Bon Voyage!</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-3">
                        <label data-error="wrong" data-success="right" for="lat_box">Name your Voyage</label>
                        <input type="text" id="jname" class="form-control validate">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button class="btn btn-unique border"><i class="fas fa-paper-plane-o ml-1">Start my Journey!</i></button>
                </div>
            </div>
        </div>
    </div>

  </main><!-- End #main -->

