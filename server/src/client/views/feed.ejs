          <li><a href="/<%=name%>/travels" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>My
                Travels</span></a></li>
        </ul>
      </nav><!-- .nav-menu -->

      <button type="button" class="btn btn-light" style="margin-top:100px" onclick="add_journey()">New Journey!</button>
    </div>
  </header><!-- End Header -->

  <main id="main">

    <section id="portfolio" class="portfolio section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Explore the World!</h2>
          <p>Curious to know about the adventures of your fellow travellers? Scroll on..</p>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100" id="port_cont">
          <% for (let i=0;i<num_cards;i++) {%>
            <div class="col-lg-4 col-md-6 portfolio-item filter-app">
              <div class="portfolio-wrap">
                <div>
                  <div>
                    <h5>
                      <%=title[i]%> <i>by <%=author[i]%></i>
                    </h5>
                  </div>
                  <div>
                    <img src=<%=port_image[i]%> class="img-fluid" style="height:17em; width:40em" alt="">
                  </div>

                </div>
                <div class="portfolio-links">
                  <a href=<%=`${port_link}`%> title="View Travel"><i class="bi bi-eye-fill"></i></i></a>
                </div>
              </div>
            </div>
            <% } %>
        </div>


      </div>
    </section>
    

